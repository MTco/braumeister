<div id="home" class="border-bottom">
  <strong>formulae.brew.sh</strong> is an online package browser for
  <%= link_to 'Homebrew', 'https://brew.sh' %> – the macOS package manager.<br>
  For more information on how to install and use Homebrew see <%= link_to 'our homepage', 'https://brew.sh' %>.

  <%= link_to 'Browse all formulae', letter_formulae_path('a'), class: 'center' %>

  <h2>🔎</h2>
  <%= render partial: 'formulae/search' %>
</div>

<div class="border-top" ></div>

<div class="recently-added">
  <h3>🆕 Recently added formulae</h3>
  <div class="listing">
    <table>
      <% @added.each do |formula| %>
        <%= render partial: 'recent', locals: { formula: formula } %>
      <% end %>
    </table>
  </div>
</div>

<% reset_cycle %>

<div class="recently-updated">
  <h3>📝 Recently updated formulae</h3>
  <div class="listing">
    <table>
      <% @updated.each do |formula| %>
        <%= render partial: 'recent', locals: { formula: formula } %>
      <% end %>
    </table>
  </div>
</div>

<div class="recently-removed">
  <h3>🚫 Recently removed formulae</h3>
  <%= @removed.map { |f| formula_link f }.join(', ').html_safe %>
</div>
